<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being created:</h2>

    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @user do |form| %>
  <%= form.label :username, 'Type your username here:' %>
  <%= form.text_field :username %><br><br>
  <%= form.label :email, 'Email:' %>
  <%= form.email_field :email, placeholder: 'email@example.com' %><br><br>
  <%= form.label :password, 'Password:' %>
  <%= form.password_field :password %><br><br>
  <%= form.submit %>
<% end %>
